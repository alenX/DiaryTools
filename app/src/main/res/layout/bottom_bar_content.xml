<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_main_tab_bottom"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
     >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp" >
        <LinearLayout
            android:id="@+id/id_tab_bottom_dictionary"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="词典"
                android:textSize="20sp"/>
            <ImageButton
                android:id="@+id/btn_tab_bottom_dictionary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/dictionary_press" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_tab_bottom_express"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递"
                android:textSize="20sp"/>
            <ImageButton
                android:id="@+id/btn_tab_bottom_express"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/express_press" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>